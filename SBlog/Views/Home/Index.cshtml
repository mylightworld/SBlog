@using SBlog.Models;
@model List<Post>
    @{
        ViewBag.Title = "Home Page";
        Post first = ViewBag.first;
    }

    @if (first != null)
    { 
    <div class="jumbotron">
        <h1>@first.Title</h1>
        <p class="lead">@Html.Raw(first.Description)</p>
        <p><a href="/post" class="btn btn-primary btn-lg">更多 &raquo;</a></p>
    </div>
    }
    

               <div class="row margin-vertical">
                   @foreach (var item in Model)
                   {
                       <div class="col-md-4">
                           <h2>@item.Title</h2>
                           <p>
                               @Html.Raw(item.ShortDesc)
                           </p>
                       </div>
                   }

                   @if (Model.Count <= 0)
                   {
                       @:暂时没有文章！！！额……<a href="/home/contact">骂骂他</a>
        }
               </div>
